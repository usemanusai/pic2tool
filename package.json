{
  "name": "automated-development-recorder",
  "version": "1.0.0",
  "description": "Transform screen recordings into executable code using AI vision analysis",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "setup": "node scripts/interactive-setup.js",
    "setup:legacy": "node scripts/setup.js",
    "setup:quick": "node scripts/interactive-setup.js --quick",
    "setup:advanced": "node scripts/interactive-setup.js --advanced",
    "validate": "node scripts/validate.js",
    "build": "node scripts/build.js",
    "build:webpack": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "start": "npm run build:webpack && electron .",
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:electron\"",
    "dev:webpack": "webpack serve --mode=development",
    "dev:electron": "wait-on http://localhost:3000 && electron . --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "dist": "npm run build:webpack && electron-builder",
    "dist:win": "npm run build:webpack && electron-builder --win",
    "clean": "rimraf dist build release",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "automation",
    "screen-recording",
    "ai-vision",
    "code-generation",
    "electron",
    "desktop-app"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "electron": "^36.5.0",
    "electron-log": "^5.2.2",
    "electron-store": "^8.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  },
  "build": {
    "appId": "com.automateddev.recorder",
    "productName": "Automated Development Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
