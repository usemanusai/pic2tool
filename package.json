{
  "name": "automated-development-recorder",
  "version": "1.0.0",
  "description": "Transform screen recordings into executable code using AI vision analysis",
  "main": "dist/main.js",
  "type": "commonjs",
  "homepage": "./",
  "scripts": {
    "setup": "node scripts/interactive-setup.js",
    "setup:legacy": "node scripts/setup.js",
    "setup:quick": "node scripts/interactive-setup.js --quick",
    "setup:advanced": "node scripts/interactive-setup.js --advanced",
    "validate": "node scripts/validate.js",
    "build": "node scripts/build.js",
    "build:webpack": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "start": "npm run build && electron .",
    "dev": "npm run build:dev && electron . --dev",
    "dev:webpack": "webpack serve --mode=development",
    "dev:electron": "wait-on http://localhost:3000 && electron . --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "dist": "npm run build:webpack && electron-builder",
    "dist:win": "npm run build:webpack && electron-builder --win",
    "clean": "rimraf dist build release",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "automation",
    "screen-recording",
    "ai-vision",
    "code-generation",
    "electron",
    "desktop-app"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "electron": "^36.5.0",
    "electron-log": "^5.4.1",
    "electron-store": "^8.2.0",
    "ffmpeg-static": "^5.2.0",
    "jimp": "^1.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.32",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "overrides": {
    "rimraf": "^6.0.1",
    "glob": "^11.0.3",
    "inflight": "npm:@isaacs/inflight@^1.0.1",
    "npmlog": "npm:consola@^3.2.3",
    "are-we-there-yet": "npm:progress@^2.0.3",
    "gauge": "npm:progress@^2.0.3",
    "boolean": "npm:yn@^5.0.0",
    "@npmcli/move-file": "npm:@npmcli/fs@^3.1.1"
  },
  "build": {
    "appId": "com.automateddev.recorder",
    "productName": "Automated Development Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
