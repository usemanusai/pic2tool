{
  "name": "automated-development-recorder",
  "version": "1.0.0",
  "description": "Transform screen recordings into executable code using AI vision analysis",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "setup": "node scripts/setup.js",
    "validate": "node scripts/validate.js",
    "build": "node scripts/build.js",
    "build:webpack": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "start": "npm run build:webpack && electron .",
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:electron\"",
    "dev:webpack": "webpack serve --mode=development",
    "dev:electron": "wait-on http://localhost:3000 && electron . --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "dist": "npm run build:webpack && electron-builder",
    "dist:win": "npm run build:webpack && electron-builder --win",
    "clean": "rimraf dist build release",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "automation",
    "screen-recording",
    "ai-vision",
    "code-generation",
    "electron",
    "desktop-app"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron": "^28.0.0",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.0",
    "sharp": "^0.32.0",
    "jimp": "^0.22.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "build": {
    "appId": "com.automateddev.recorder",
    "productName": "Automated Development Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
